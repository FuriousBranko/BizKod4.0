<script src="assets/jquery-3.3.1.js"></script>
<script src="assets/log-json.js"></script>

<div style="display: grid;  grid-template-columns: 30%; justify-content: center; width:100%; text-align: center">
<h1>HOW DO YOU WANT TO DO THIS</h1>
{{#if success}}
<img src="assets/critical.png" alt="damn you browser">
<button id="logout">log out</button>
{{else}}
{{#if error}}
<div style="background-color:rgba(0, 0, 0, 0.5)">
<p style="color:white">{{error}}</p>
</div>
{{/if}}
<input id="username" type="text" placeholder="username">
<input id="password" type="password" placeholder="password">
<button id="submit">log in</button>
<a href="/register">not registered?</a>
{{/if}}
</div>