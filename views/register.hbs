<script src="assets/jquery-3.3.1.js"></script>
<script src="assets/reg-json.js"></script>
<a href="/login">take me back!</a>
<div style="display: grid;  grid-template-columns: 30%; justify-content: center; width:100%; text-align: center">
<h1>REGISTER</h1>
{{#if success}}
<h1>congratz</h1>
{{else}}
{{#if error}}
<div style="background-color:rgba(131, 0, 0, 0.5)">
<p style="color:white">{{error}}</p>
</div>
{{/if}}
<input id="username" type="text" placeholder="name" style="border: solid white 1px; font-size: 18px">
<br>
<input id="email" type="text" placeholder="your@mail.com" style="border: solid white 1px; font-size: 18px">
<br>
<input id="password" type="password" placeholder="password" style="border: solid white 1px; font-size: 18px">
<br>
<button id="submit" style="border: solid #FFA627 1px; background: #FFA627; color: white; font-size: 18px">REGISTER</button>
{{/if}}
</div>
